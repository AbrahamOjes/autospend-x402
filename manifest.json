{
  "manifest_version": 3,
  "name": "Autospend - X402 Payment Extension",
  "version": "1.0.0",
  "description": "Seamless cryptocurrency payments using the X402 protocol with Coinbase Wallet integration",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "x402-popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["x402-content-minimal.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "wallet-content-standalone.js",
        "provider-bridge.js",
        "wallet-ready-check.js",
        "wallet-initializer.js",
        "wallet-bridge.js",
        "wallet-connect.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
